@model LabInsta.Models.Comment

@{
    ViewData["Title"] = "CommentCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CommentCreate</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CommentCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripton" class="control-label"></label>
                <input asp-for="Descripton" class="form-control" />
                <span asp-validation-for="Descripton" class="text-danger"></span>
            </div>
            <div class="form-group">
              <input hidden asp-for="PostId" class="form-control" value=@ViewBag.PostId />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
